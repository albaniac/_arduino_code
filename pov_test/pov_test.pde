void setup()
{  
 for (int k=2;k<=9;k++)
    pinMode(k,OUTPUT);
}


void display (char POVstring[])
{
 for (int i=(strlen(POVstring)-1); i>=0; i--)
   {  for (int j=(WIDTH-1); j>=0; j--)
       { PORTD = font[(int)POVstring[i]-65][j]; delay(1); }
       PORTD = B00000000; delay(1);
   }
}

void loop()
{
if ( analogRead(5)==0 )
 { display("HELLO"); }
} 
